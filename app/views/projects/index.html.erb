<div class="container" style="margin-top: 20px;">
  <% @projects.each_with_index do |m, idx| %>
    <% if idx % 3 == 0 %>
      <div class="row" style="margin-bottom: 20px;">
    <% end %>
    <div class="col-4">
      <div class="card">
        <a href="<%= project_path(m) %>"><img class="card-img-top" style="height: 300px; object-fit: cover;" src="
          <%= m.cards.length >= 1 ? m.cards[0].img : '#' %>" alt="Project image cap"></a>
        <div class="card-body">
          <h4 class="card-title"><%= m.title %></h4>
        </div>
        <% if current_user && m.user_id == current_user.id %>
          <div class="card-body">
            <a href="<%= edit_project_path(m) %>">수정</a>
            <a href="<%= project_path(m) %>" data-method="delete" data-confirm="진짜?">삭제</a>
          </div>
        <% end %>
      </div>
    </div>
    <% if idx % 3 == 2 %>
      </div>
    <% end %>
  <% end %>
</div>