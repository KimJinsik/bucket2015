<div class="container" style="margin-top: 20px;">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= @project.title %></h4>
    </div>
    <% @project.project_cards.order(:position).each do |m| %>
      <img class="card-img-top" src="<%= m.card.img %>" alt="Card image cap">
      <div class="card-body">
        <p class="card-text"><%= m.content %></p>
      </div>
    <% end %>
    <% if current_user && @project.user_id == current_user.id %>
      <div class="card-body">
        <a href="<%= edit_project_path(@project) %>">수정</a>
        <a href="<%= project_path(@project) %>" data-method="delete" data-confirm="진짜?">삭제</a>
      </div>
    <% end %>
  </div>
</div>