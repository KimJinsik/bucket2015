<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
  <% props = {
      advice: @advice,
      advice_contents: @advice.advice_contents.order(:position),
      is_mine: current_user && @advice.user_id == current_user.id
  }.to_json
  %>
  <div id="app" props="<%= props %>"></div>
</div>

<%= javascript_pack_tag 'advices/show' %>
<%= stylesheet_pack_tag 'advices/show' %>
