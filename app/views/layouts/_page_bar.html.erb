<p>총 개수 : <%= @page.total_count %></p>
<nav>
  <ul class="pagination justify-content-center">
    <% unless @page.first_page? %>
      <li class="page-item">
        <a class="page-link" href="<%= "#{path}?page=#{@page.prev_page}" %>" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <li class="page-item">
        <a class="page-link" href="<%= "#{path}?page=#{@page.current_page - 1}" %>"><%= @page.current_page - 1 %></a>
      </li>
    <% end %>
    <li class="page-item active">
      <a class="page-link" href="<%= "#{path}?page=#{@page.current_page}" %>"><%= @page.current_page %></a></li>
    <% unless @page.last_page? %>
      <li class="page-item">
        <a class="page-link" href="<%= "#{path}?page=#{@page.current_page + 1}" %>"><%= @page.current_page + 1 %></a>
      </li>
      <li class="page-item">
        <a class="page-link" href="<%= "#{path}?page=#{@page.next_page}" %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    <% end %>
  </ul>
</nav>