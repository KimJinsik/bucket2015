<div class="container" style="margin-top: 20px;">
  <% @cards.each_with_index do |m, idx| %>
    <% if idx % 3 == 0 %>
      <div class="row" style="margin-bottom: 20px;">
    <% end %>
    <div class="col-4">
      <div class="card">
        <a href="<%= card_path(m) %>"><img class="card-img-top" style="height: 300px; object-fit: cover;" src="<%= m.img %>" alt="Card image cap"></a>
        <div class="card-body">
          <p class="card-text"><%= m.content %></p>
        </div>
        <% if current_user && m.user_id == current_user.id %>
          <div class="card-body">
            <a href="<%= edit_card_path(m) %>">수정</a>
            <a href="<%= card_path(m) %>" data-method="delete" data-confirm="진짜?">삭제</a>
          </div>
        <% end %>
      </div>
    </div>
    <% if idx % 3 == 2 %>
      </div>
    <% end %>
  <% end %>
</div>
<br>