<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
  <%= render 'layouts/page_bar', path: cards_path %>

  <% @cards.each_with_index do |m, idx| %>
    <% if idx % 3 == 0 %>
      <div class="row" style="margin-bottom: 20px;">
    <% end %>
    <div class="col-4">
      <div class="card">
        <div class="card-header">
          <img src="<%= m.user.avatar_url0 %>" class="rounded-circle" style="display: inline-block; width: 2rem; height: 2rem;" alt="avatar" onerror="this.src='https://orig00.deviantart.net/9b06/f/2012/034/d/2/facebook_avatar___pikachu_by_heatphoenix-d4ojd5a.png'">
          <h5 class="card-title" style="display: inline-block;"><%= m.user.nickname %></h5>
        </div>
        <a href="<%= card_path(m) %>"><img class="card-img-top" style="padding: 0.5rem; height: 300px; object-fit: cover;" src="<%= m.img_url0 %>" alt="Card image cap"></a>
        <div class="card-body">
          <p class="card-text"><%= m.content %></p>
        </div>
        <% if current_user && m.user_id == current_user.id %>
          <div class="card-body">
            <a href="<%= edit_card_path(m) %>">수정</a>
            <a href="<%= card_path(m) %>" data-method="delete" data-confirm="진짜?">삭제</a>
          </div>
        <% end %>
      </div>
    </div>
    <% if idx % 3 == 2 %>
      </div>
    <% end %>
  <% end %>
</div>
<br>